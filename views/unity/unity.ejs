<%- include ('../partials/top'); %>

<header><%- include ('../partials/navbar'); %></header>


    <main class="flex-container direction-column">

         
        <h1 class="text-center">Unidade de medida para produtos</h1>

      
        <table class="table table-hover">
            <thead>
                <th scope="col">Unidade</th>
                <th scope="col">Descrição</th>
                <th scope="col">Status</th>
                <th scope="col">Editar</th>
                <th scope="col">Deletar</th>
            </thead>
            <tbody>  

        <% unities.forEach(function(unity){  %>

                <tr>
                    <td><%=unity.unity%></td>
                    <td><%=unity.description%></td>
                    <td><%=unity.status%></td>
                    <td class="ta-center"><a class="font-awesome color-edit" href="/unity/edit/<%=unity.id%>" 
                        ata-toggle="tooltip" title="Editar Unidade"></a></td>
                    <td class="ta-center"><a class="font-awesome color-delete" href="/unity/excluir/<%=unity.id%>" 
                        ata-toggle="tooltip" title="Excluir CFOP"
                        onclick="return confirm('Confirmar a Exclusão?')"></a></td>                                       
                </tr>
                </tr>
        <% }) %>
            </tbody>
        </table>
      
              
    </main>

    <article> <%- include ('../partials/menuProduct.ejs'); %></article>
    <aside><%- include ('../partials/newUnity.ejs'); %></aside>


    <%- include ('../partials/footer'); %>

